{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog",
      "contentTypes": [
        "articles"
      ]
    },
    {
      "title": "pages",
      "path": "[[workspace]]/src/pages",
      "contentTypes": [
        "pages"
      ]
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "pages",
      "pageBundle": false,
      "previewPath": null,
      "filePrefix": null,
      "fileType": "md",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Modified date",
          "name": "updatedDate",
          "type": "datetime",
          "dateFormat": "MMMM do, Y",
          "default": "{{now}}",
          "isModifiedDate": true
        }
      ]
    },
    {
      "name": "articles",
      "pageBundle": false,
      "previewPath": null,
      "filePrefix": null,
      "fileType": "md",
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "draft",
          "name": "draft",
          "type": "boolean",
          "default": true
        },
        {
          "title": "pubDate",
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "updatedDate",
          "name": "updatedDate",
          "type": "datetime",
          "dateFormat": "MMMM do, Y",
          "default": "{{now}}",
          "isModifiedDate": true
        },
        {
          "title": "Hero Image",
          "type": "fields",
          "name": "heroImage",
          "fields": [
            {
              "title": "Alt",
              "name": "alt",
              "type": "string"
            },
            {
              "title": "Src",
              "name": "src",
              "type": "image"
            }
          ]
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "choice",
          "choices": [
            "announcement",
            "audio",
            "image",
            "links",
            "post",
            "quote",
            "text"
          ],
          "default": "links"
        },
        {
          "title": "link",
          "name": "link",
          "type": "string"
        }
      ]
    }
  ]
}